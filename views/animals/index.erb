<% require( 'date' ) %>

<h1>Animals</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Species</th>
    <th>Breed</th>
    <th>Adoptable?</th>
    <th>Admission Date</th>
    <th>Days in Shelter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% for animal in @animals do %>
    <tr>
      <td><%= animal.name() %></td>
      <td><%= animal.age() %></td>
      <td><%= animal.species() %></td>
      <td><%= animal.breed() %></td>
      <td><%= animal.adoptable() %></td>
      <td><%= animal.admission_date() %></td>
      <td><%= "#{Date.today() - animal.admission_date()}".to_i %></td>
      <td><a href="/animals/<%= animal.id() %>">Details</a></td>
      <td><a href="/animals/<%= animal.id() %>/edit">Edit</a></td>
      <td><a href="/animals/<%= animal.id() %>/delete">Delete</a></td>
    </tr>
  <% end %>
</table>